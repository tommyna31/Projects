        "\n",
        "active = True\n",
        "while active:\n",
        "  print(\"What do you want to do?\")\n",
        "  menu = ['\\t1) Addition', '\\t2) Subtraction', '\\t3) Multiplication', '\\t4) Division', '\\t5) Power', '\\t6) Exit']\n",
        "  for x in menu:\n",
        "    print (x)\n",
        "\n",
        "  user_input = int(input(\"\\n Choose: \"))\n",
        "\n",
        "  if user_input == 1:\n",
        "    def addition(a, b):\n",
        "      return a + b\n",
        "\n",
        "    num1 = int(input(\"Enter first number: \"))\n",
        "    num2 = int(input(\"Enter second number: \"))\n",
        "\n",
